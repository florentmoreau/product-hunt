
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "berlin.jpg" %>');">
  <div class="banner-content">
    <h1><%= @product.name %></h1>
    <p>
      <%= @product.tagline %>
      <span class="label label-default"><%= @product.category %></span>
    </p>
    <p>
      Posted by <%= @product.user.email %>
    </p>
    <%= link_to "Visit website", @product.url, class: "btn btn-primary btn-lg" %>
  </div>
</div>
