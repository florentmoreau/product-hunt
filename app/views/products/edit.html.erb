<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1 class="text-center">Add a product</h1>

      <%= simple_form_for @product do |f|%>
      <%= f.input :name, placeholder: "kudoz", label: "Choose name"%>
      <%= f.input :url, placeholder: "http://kudoz.com", label: "Choose url"%>
      <%= f.button :submit, "Add", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
